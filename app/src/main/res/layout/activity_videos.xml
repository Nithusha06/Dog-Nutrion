<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="0dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#C1B033"
        android:elevation="4dp"
        android:title="Videos"
        android:titleTextColor="@android:color/white" />

    <!-- TextView for clickable YouTube links -->
    <TextView
        android:id="@+id/video1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video 1: Learn Android Development"
        android:padding="16dp"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/video2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video 2: Master Java in 30 Days"
        android:padding="16dp"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/video3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video 3: Introduction to Kotlin"
        android:padding="16dp"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/gif_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dog_giveaway_ideas" />

</LinearLayout>
